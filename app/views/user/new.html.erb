<h1>New User</h1>


<%= form_for :user, url: "/user" do |f| %>
  <p>
    <%= f.label :username %><br>
    <%= f.text_field :username %>
  </p>

  <p>
    <%= f.label :password %><br>
    <%= f.password_field :password %>
  </p>

  <p>
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </p>

  <p>
    <%= f.label :remake %><br>
    <%= f.text_area :remake %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>
